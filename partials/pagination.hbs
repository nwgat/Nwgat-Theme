<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{pageUrl prev}}">&larr;<span class="pagination-text"> Newer Posts</span></a>
    {{/if}}
    <span class="page-number">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{pageUrl next}}"><span class="pagination-text">Older Posts </span>&rarr;</a>
    {{/if}}
</nav>